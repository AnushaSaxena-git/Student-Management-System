
@{
    ViewData["Title"] = "Welcome";
    Layout = "_masterlayout1";
}


@{
    ViewData["Title"] = "Student Enrollment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header text-center">
                <h3>Welcome to the Students Enrollment Page</h3>

                <h1>Student Enrollments</h1>
                <br />
                <h6>Hey students! Now you can register in a new course and can earn stipend!</h6>
                <h6>Here is the link for your New courses</h6>
                <h4>Register Now!</h4>
                <p>
                    <a asp-action="Create">Click here to Register in a new course!👇</a>
                </p>

               
            </div>
            <div class="card-body text-center">
                <div style="display:flex;justify-content:space-between " class="text-center">
                  
                    <br />

                </div>
                <p>This is the page where you can manage student enrollments for courses and departments.</p>
                <p>Feel free to add or view student details here.</p>
                <p>
                    <div class="btn-primary">


                        <button class="actionbtn"> <a asp-action="Index"> Next </a></button>

                    </div>
                </p>
            </div>
        </div>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
