@model List<Crudbyme.Dtos.CourseDTO>
@{
    Layout = "_masterlayout1";
}

<h3 style="color:dimgray" class= " m-3 bg-white p-3 shadow rounded d-flex justify-content-center align-content-center">Courses Available</h3>
<div class="center-wrapper m-3 bg-white p-3 shadow  rounded      d-flex justify-content-center align-content-center " style="margin:auto">

    <table class="table table-bordered text-center table-hover table table table-borderless table table-bordered table-striped align-content-center">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Course Id</th>
            <th>Department Id</th>
            @* <th>Department</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td align="center">@course.CourseName</td>
                <td align="center">@course.StartDate.ToString("MM/dd/yyyy")</td>
                <td align="center">@course.EndDate.ToString("MM/dd/yyyy")</td>
                <td align="center">@course.CourseId</td>
                <td align="center">@course.DeptId</td>

                @* <td>@course.DepartmentName</td> <!-- Assuming you have a property for Department Name --> *@
            </tr>
        }
    </tbody>
</table>
</div>

<div class="btn btn-primary" id="back" style="color:black;text-decoration:none">

    <a  style="color:black; text-decoration:none" asp-action="Index">Back to List</a>
</div>