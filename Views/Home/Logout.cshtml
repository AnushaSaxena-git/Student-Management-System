<div class="d-flex justify-content-center align-items-center" style="margin:auto">
    <div class="card card-primary card-outline mb-4 pt-4" style="width: 100%; max-width: 600px; margin: 0 auto; border-radius: 12px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">

        <!-- User Authentication Check -->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="alert alert-success mt-2" style="border-radius: 8px;">
                Welcome, @User.Identity.Name!
                <a href="@Url.Action("Logout", "Admin")" class="btn btn-danger btn-sm" style="border-radius: 8px;">Logout</a>
            </div>
        }
        else
        {
            <div>
                <div class="alert alert-warning mt-2" style="border-radius: 8px;">
                    You are not logged in.
                </div>
            </div>
        }

        <!-- Card Header -->
        <div class="card-header text-center" style="background-color: #f8f9fa; border-bottom: 2px solid #ddd; border-radius: 12px 12px 0 0;">
            <h1 style="color: #4a4a4a; font-size: 2.2rem;">Thanks for visiting our site! 🙂</h1>
        </div>

        <!-- Card Body: Login Form -->
        <div class="card-body login-card-body" style="padding: 2rem;">
            <form asp-action="Login" asp-controller="Admin" method="post">
                <h2 class="text-center" style="color: #333; font-size: 1.8rem; font-weight: bold;">Sign In</h2>

                <!-- Username Field -->
                <div class="form-group mb-3">
                    <label for="username" style="font-weight: 500;">Username<span class="bi bi-file-person-fill"></span></label>
                    <div class="form-floating">

                        <input type="text" id="username" class="form-control form-control-sm" name="Username" placeholder="Enter your username" required style="border-radius: 8px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);" />
                    </div>
                </div>

                <!-- Password Field -->
                <div class="form-group mb-3">
                    <label for="password" style="font-weight: 500;">Password<span class="bi bi-lock-fill"></span></label>
                    <div class="form-floating">
                        <input type="password" id="password" class="form-control form-control-sm" name="Password" placeholder="Enter your password" required style="border-radius: 8px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);" />
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="row pt-3">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary btn-sm" style="border-radius: 8px; padding: 0.6rem 1.5rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); transition: all 0.3s ease-in-out;">
                            Sign In
                        </button>
                    </div>
                </div>
            </form>

            <!-- Create Account Section -->
            <div class="text-center mt-4">
                <h3 style="color: #6c757d;">Or create a new account</h3>
                <a href="@Url.Action("Create", "Home")" class="btn btn-secondary btn-sm" style="border-radius: 8px; padding: 0.6rem 1.5rem; transition: all 0.3s ease-in-out;">
                    Create Account
                </a>
            </div>

        </div>
    </div>
</div>
